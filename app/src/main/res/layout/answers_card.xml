<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/answers_card_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:text="专项智能训练" />

    <GridView
        android:layout_below="@id/answers_card_sub_title"
        android:id="@+id/answers_card_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="5"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:verticalSpacing="10dp"
        tools:listitem="@layout/item_answers" />

    <TextView
        style="@style/text_style_white_15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="交卷并查看结果" />
</RelativeLayout>
