<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:background="@color/white"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/message_title"
        style="@style/text_style_colorprimary_18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="您有新消息啦" />

    <TextView
        android:id="@+id/message_time"
        style="@style/text_style_gray2_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="2016/1/3" />

    <TextView
        android:id="@+id/message_contente"
        style="@style/text_style_blank_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:text="城市冰冷的洒着雨，你站在你的转身处，看起处，潮汐，看落处，浪花，有谁知道，一道冰冷的寒风曾经来过，将梦打得支离破碎！" />

</LinearLayout>
