<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context="ben.practice.activity.PersonalActivity">

    <include
        android:id="@+id/personal_toolbar"
        layout="@layout/layout_toolbar" />

    <ListView
        android:id="@+id/personal_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_toolbar"
        android:layout_marginTop="10dp"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        tools:listitem="@layout/item_personal" />

    <TextView
        android:id="@+id/personal_login_out"
        style="@style/text_style_colorprimary_15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_listview"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="退出登入" />
</RelativeLayout>
