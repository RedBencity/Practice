<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="ben.practice.activity.ResultActivity">

    <include
        android:id="@+id/result_toolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/practice_style"
            style="@style/text_style_blue1_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="练习类型：" />

        <TextView
            android:id="@+id/cut_off_time"
            style="@style/text_style_blue1_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="交卷时间：" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/text_style_white_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答对" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="100sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/total_count"
            style="@style/text_style_white_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:text="道/5道" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答题卡"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            style="@style/text_style_blank_15sp"
            />
        <GridView
            android:id="@+id/result_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="0dp"
            android:numColumns="5"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:verticalSpacing="10dp"
            tools:listitem="@layout/item_result" />
    </LinearLayout>


</LinearLayout>
